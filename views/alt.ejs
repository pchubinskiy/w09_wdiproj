    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <nav class="navbar navbar-custom-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-custom-brand" href="/">Home</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <!--<form class="navbar-form navbar-right">
            <div class="form-group">
              <input type="text" placeholder="Email" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success">Sign in</button>
          </form>-->
        </div><!--/.navbar-collapse -->
      </div>
    </nav>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1><%= title %></h1>
        <form action="">
          <p id="prompt_question" value="<%= question._id %> <%= question.category %>"><%= question.text %></p>
          <input id="answer" class="col-lg-offset-4 col-md-offset-4 col-sm-offset-4 col-xs-offset-4 col-lg-3 col-md-3 col-sm-3 col-xs-3" type="text" placeholder=". . . .">
        </form>
        <button id="submit-answer" class="submit-button btn-custom-primary btn btn-lg col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1" href="#" role="button">OK</button>
      </div>
    </div>

    <h2 class="">Survey Log:</h2>
    <div class="container">
      <!-- Example row of columns -->
        <div id="log">
          <% for (var i=0; i<questions_list.length; i++) { %>
            <% if ((i===0) || (i%2===0)) { %><div class="row"><% } %>
              <div class="q_a_wrapper col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div class="question_" value="<%= questions_list[i]._id %>"><%= questions_list[i].text %>
                  <p id="ans <%=i%>-0" class="answer_item" value=""></p>
                  <p id="ans <%=i%>-1" class="answer_item" value=""></p>
                  <p id="ans <%=i%>-2" class="answer_item" value=""></p>
                  <p id="ans <%=i%>-3" class="answer_item" value=""></p>
                  <p id="ans <%=i%>-4" class="answer_item" value=""></p>
                  <p><a class="btn btn-default" href="#" role="button">View details &raquo;</a></p>
                </div>
              </div>
            <% if ((i===1) || (i%2===1) || (i===questions_list.length-1)) { %></div><% } %>
          <% } %>
        </div>

      <hr>
    <script type="text/javascript" src="//code.jquery.com/jquery-2.2.0.min.js"></script>
    <script rel="text/javascript" src="/javascripts/main.js"></script>
<!-- --><!-- --><!-- --><!-- -->

          <footer>
        <p>&copy; 2016 Paul Chubinskiy</p>
      </footer>
    </div> <!-- /container -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
